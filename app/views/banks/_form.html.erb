<%= form_with(model: @bank, url: banks_path, local: true) do |form| %>
  <% if @bank.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bank.errors.count, "error") %> You are providing a wrong bank details: </h2>

      <ul>
        <% @bank.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div style="color:black">
  <div class="field">
    <%= form.label :bank_name %>
    <%= form.text_field :bank_name %>
  </div> </div>
  <br>
  <div class="actions">
    <%= form.submit  "Create Account", class: "btn btn-primary"%>
    <%= link_to 'Back', banks_path, class: 'btn btn-secondary'%>
  </div>
<% end %>

