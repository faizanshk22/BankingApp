<div style="padding: 22px">
  <div style="color: black"> 
    <div class="text-center p-3">
      <h1 class="bordered-div" style="color: black">Transaction Details</h1>
    </div>
    <br>
    <div>
    <% receiver_account = Account.find_by(id: @transaction.receiver_id) %>
    <% if receiver_account %>
    <p><strong>Receiver Account:</strong> <%= receiver_account.account_no %></p>
    <p><strong>Receiver Account Bank:</strong> <%= receiver_account.bank.bank_name %></p>

  <% else %>
    <p><strong>Receiver Account:</strong> Not available</p>
  <% end %>

    <p><strong>Amount:</strong> <%= @transaction.amount %></p>
    <p><strong>Sender Account:</strong> <%= @transaction.account.account_no %></p>
  </div>
    <br>
    <%= link_to 'Back', transactions_path, class: 'btn btn-secondary' %>
  </div>
</div>
